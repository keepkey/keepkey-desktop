{
  "name": "keepkey-monorepo",
  "packageManager": "yarn@3.3.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prerec-mac": "brew install git-lfs && git lfs fetch && git lfs install",
    "postinstall": "yaml-sort -i .yarnrc.yml",
    "clean": "yarn workspaces foreach -p run clean",
    "build": "yarn workspaces foreach -pRti --from 'keepkey-desktop' run build",
    "dev": "yarn workspaces foreach -pRti --from 'keepkey-desktop' run dev",
    "lint": "yarn workspaces foreach -pi run lint",
    "lint:fix": "yarn workspaces foreach -pi run lint:fix",
    "test": "yarn workspaces foreach -pi run test"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@yarnpkg/sdks": "^3.0.0-rc.31",
    "eslint": "^8.28.0",
    "prettier": "^2.3.2",
    "typescript": "^4.7.0",
    "yaml-sort": "^1.2.1"
  },
  "resolutions": {
    "forever-agent": "npm:noist@1.0.0",
    "tunnel-agent": "npm:noist@1.0.0",
    "tough-cookie": "^3.0.0"
  },
  "dependenciesMeta": {
    "app-builder-lib@23.6.0": {
      "unplugged": true
    },
    "dmg-builder@23.6.0": {
      "unplugged": true
    },
    "usb@2.5.2": {
      "unplugged": true
    }
  }
}
