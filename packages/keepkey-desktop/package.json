{
    "name": "keepkey-desktop",
    "version": "1.2.2",
    "author": {
        "name": "KeepKey",
        "email": "support@keepkey.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/keepkey/keepkey-desktop"
    },
    "homepage": "undefined",
    "private": true,
    "scripts": {
        "build": "ts-node --skipProject --swc ./scripts/build.ts",
        "release": "yarn run -T build && electron-builder",
        "dev": "ts-node --skipProject --swc ./scripts/dev.ts",
        "clean": "rimraf build dist",
        "lint": "eslint -c .eslintrc src --ext .ts,.tsx",
        "lint:fix": "yarn lint --fix"
    },
    "main": "build/main.js",
    "build": {
        "appId": "com.keepkey.desktop",
        "productName": "KeepKey Desktop",
        "generateUpdatesFilesForAllChannels": true,
        "afterSign": "./scripts/afterSign.js",
        "files": [
            "build/**/*"
        ],
        "protocols": [
            {
                "name": "Keepkey Desktop",
                "schemes": [
                    "keepkey"
                ]
            }
        ],
        "asar": true,
        "extends": null,
        "mac": {
            "hardenedRuntime": true,
            "category": "public.app-category.finance",
            "icon": "icon.png",
            "entitlements": "entitlements.mac.plist",
            "entitlementsInherit": "entitlements.mac.plist",
            "target": [
                "dmg"
            ],
            "publish": [
                "github"
            ]
        },
        "win": {
            "icon": "icon.png",
            "target": [
                "nsis"
            ],
            "publish": [
                "github"
            ]
        },
        "linux": {
            "icon": "icon.png",
            "target": [
                "AppImage"
            ],
            "publish": [
                "github"
            ]
        }
    },
    "dependencies": {
        "@bithighlander/hdwallet-keepkey-nodehid": "^2.14.3",
        "@keepkey/device-protocol": "^7.10.2",
        "@keepkey/errors": "^1.1.3",
        "@keepkey/keepkey-sdk": "^0.0.9",
        "@keepkey/logger": "^1.1.3",
        "@sentry/electron": "^4.1.0",
        "@shapeshiftoss/hdwallet-core": "^1.40.0",
        "@shapeshiftoss/hdwallet-keepkey": "^1.40.0",
        "@shapeshiftoss/hdwallet-keepkey-nodewebusb": "^1.40.0",
        "@shapeshiftoss/hdwallet-native": "^1.40.0",
        "@tsoa/runtime": "^4.1.3",
        "auto-launch": "^5.0.5",
        "body-parser": "^1.20.1",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "electron-is-dev": "^2.0.0",
        "electron-log": "^4.4.8",
        "electron-updater": "^5.3.0",
        "esbuild": "^0.15.14",
        "esbuild-plugin-resolve": "^1.0.3",
        "express": "^4.18.2",
        "hidefile": "^3.0.0",
        "keepkey-desktop-app": "workspace:*",
        "lodash": "^4.17.21",
        "nedb": "^1.8.0",
        "promise.any": "^2.0.5",
        "request": "^2.88.2",
        "request-promise": "^4.2.6",
        "swagger-ui-express": "^4.6.0",
        "usb": "^2.5.2",
        "wait-promise": "^0.4.1",
        "web3": "^1.8.1"
    },
    "devDependencies": {
        "@keepkey/eslint-plugin-logger": "^1.1.0",
        "@swc/cli": "^0.1.57",
        "@swc/core": "^1.3.19",
        "@tsoa/cli": "^4.1.3",
        "@types/auto-launch": "^5.0.2",
        "@types/hidefile": "^3.0.0",
        "@types/lodash": "^4.14.190",
        "@types/nedb": "^1.8.12",
        "@types/node": "^18",
        "@types/request-promise": "^4.1.48",
        "@types/wait-promise": "^0.4.0",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "concurrently": "^7.6.0",
        "dmg-builder": "^23.6.0",
        "electron": "16.0.7",
        "electron-builder": "^24.0.0-alpha.5",
        "electron-builder-notarize": "^1.5.0",
        "eslint": "^8.28.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "prettier": "^2.3.2",
        "rimraf": "^3.0.2",
        "ts-node": "^10.9.1",
        "tsoa": "^4.1.3",
        "typescript": "^4.7.0"
    }
}
